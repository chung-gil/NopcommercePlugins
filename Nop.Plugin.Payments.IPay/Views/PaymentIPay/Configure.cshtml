@{
    Layout = "";
}
@model ConfigurationModel
@using Nop.Plugin.Payments.IPay.Models;
@using Nop.Web.Framework;
@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })
@using (Html.BeginForm())
{
    <table class="adminContent">
        <tr>
            <td colspan="2">
                <b>@T("Plugins.Payments.IPay.Notes")</b>
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.CompanyKey_OverrideForStore, model => model.CompanyKey, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.CompanyKey):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.CompanyKey)
                @Html.ValidationMessageFor(model => model.CompanyKey)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.CompanyKeyAMEX_OverrideForStore, model => model.CompanyKeyAMEX, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.CompanyKeyAMEX):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.CompanyKeyAMEX)
                @Html.ValidationMessageFor(model => model.CompanyKeyAMEX)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.TerminalId_OverrideForStore, model => model.TerminalId, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.TerminalId):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.TerminalId)
                @Html.ValidationMessageFor(model => model.TerminalId)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.CurrencyCodeId_OverrideForStore, model => model.CurrencyCodeId, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.CurrencyCodeValues):
            </td>
            <td class="adminData">
                @Html.DropDownList("CurrencyCodeId", Model.CurrencyCodeValues)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.TransactModeId_OverrideForStore, model => model.TransactModeId, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.TransactModeValues):
            </td>
            <td class="adminData">
                @Html.DropDownList("TransactModeId", Model.TransactModeValues)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.AdditionalFee_OverrideForStore, model => model.AdditionalFee, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.AdditionalFee):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.AdditionalFee)
                @Html.ValidationMessageFor(model => model.AdditionalFee)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.AdditionalFeePercentage_OverrideForStore, model => model.AdditionalFeePercentage, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.AdditionalFeePercentage):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.AdditionalFeePercentage)
                @Html.ValidationMessageFor(model => model.AdditionalFeePercentage)
            </td>
        </tr>
        <tr>
            <td colspan="2" width="100%">
                <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            </td>
        </tr>
    </table>

}