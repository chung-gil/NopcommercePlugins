@{
    Layout = "";
}
@model ConfigurationModel
@using Nop.Plugin.Payments.Eigen.Models;
@using Nop.Web.Framework;
@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })
@using (Html.BeginForm())
{
    <table class="adminContent">
        <tr>
            <td colspan="2">
                <b>@T("Plugins.Payments.Eigen.Notes")</b>
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.UseSandbox_OverrideForStore, model => model.UseSandbox, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.UseSandbox):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.UseSandbox)
                @Html.ValidationMessageFor(model => model.UseSandbox)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.AllowStoringTransactionLog_OverrideForStore, model => model.AllowStoringTransactionLog, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.AllowStoringTransactionLog):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.AllowStoringTransactionLog)
                @Html.ValidationMessageFor(model => model.AllowStoringTransactionLog)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.TerminalID_OverrideForStore, model => model.TerminalID, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.TerminalID):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.TerminalID)
                @Html.ValidationMessageFor(model => model.TerminalID)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.HashPassword_OverrideForStore, model => model.HashPassword, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.HashPassword):
            </td>
            <td class="adminData">
                @*@Html.EditorFor(model => model.HashPassword)*@
                @Html.TextBoxFor(model => model.HashPassword, new { autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.HashPassword)
            </td>
        </tr>        
        <tr>
            <td colspan="2" width="100%">
                <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            </td>
        </tr>
    </table>
    
}